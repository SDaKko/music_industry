<%= form_with(model: [@artist, @album]) do |form| %> <%# Обратите внимание на [@artist, @album] %>
  <% if @album.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@album.errors.count, "error") %> запрещено сохранение альбома:</h2>

      <ul>
        <% @album.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :record_label %>
    <%= form.text_field :record_label %>
  </div>

  <div class="field">
    <%= form.label :album_genre %>
    <%= form.text_field :album_genre %>
  </div>

  <div class="field">
    <%= form.label :number_of_tracks %>
    <%= form.number_field :number_of_tracks %>
  </div>

  <div class="actions">
    <%= form.submit "Сохранить альбом"%>
  </div>
<% end %>