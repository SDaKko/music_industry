<h1>Альбомы артиста <%= @artist.formatted_name %></h1>

<%= link_to 'Новый альбом', new_artist_album_path(@artist) %>

<table>
  <thead>
    <tr>
      <th>Название</th>
      <th>Записывающая студия</th>
      <th>Жанр альбома</th>
      <th>Количество треков</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.title %></td>
        <td><%= album.record_label %></td>
        <td><%= album.album_genre %></td>
        <td><%= album.number_of_tracks %></td>
        <td><%= link_to 'Показать', artist_album_path(@artist, album) %></td>
        <td><%= link_to 'Редактировать', edit_artist_album_path(@artist, album) %></td>
        <td><%= link_to 'Удалить', confirm_destroy_artist_album_path(@artist, album), method: :get %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Назад к артисту', artist_path(@artist) %>